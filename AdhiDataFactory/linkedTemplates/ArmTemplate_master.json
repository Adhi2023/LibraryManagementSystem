{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "AdhiDataFactory"
		},
		"AzureBlobStorage1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorage1'"
		},
		"TasksDatabaseLinkedService_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'TasksDatabaseLinkedService'"
		},
		"inputBLOB_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'inputBLOB'"
		},
		"outputDatabase_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'outputDatabase'"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "AdhiDataFactory_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"AzureBlobStorage1_connectionString": {
						"value": "[parameters('AzureBlobStorage1_connectionString')]"
					},
					"TasksDatabaseLinkedService_connectionString": {
						"value": "[parameters('TasksDatabaseLinkedService_connectionString')]"
					},
					"inputBLOB_connectionString": {
						"value": "[parameters('inputBLOB_connectionString')]"
					},
					"outputDatabase_connectionString": {
						"value": "[parameters('outputDatabase_connectionString')]"
					}
				}
			},
			"dependsOn": []
		}
	]
}